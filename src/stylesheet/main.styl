body
    background: radial-gradient(#262626, #000000)
    display: flex
    overflow: hidden
    height 100vh
    width: 100%

.fps
    top 0
    left 0
    transform-origin: top left
    transform: scale(.7)

.camvelocity
    position: fixed
    bottom: 0
    right: 0
    max-width 200px
    max-height 200px
    transition: opacity 1s ease
    &.hidden
        opacity 0

.dg
    transition: opacity 1s ease
    &.hidden
        opacity 0

.button
    position fixed
    bottom: 60px
    left 60px
    width: 180px
    font-family: sans-serif
    color: white
    padding: 10px 30px
    border: 1px solid white
    border-radius: 100px
    text-align center
    letter-spacing: .01em
    opacity .1
    transition: opacity .8s ease
    cursor pointer
    &:hover
        opacity 1

#container
    position fixed
    top 0
    left 0
    width: 100%
    height: 100vh
    cursor: move; /* fallback if grab cursor is unsupported */
    cursor: grab;
    cursor: -moz-grab;
    cursor: -webkit-grab;
    &:active
        cursor: grabbing;
        cursor: -moz-grabbing;
        cursor: -webkit-grabbing;
    